.container
  .row
    .col-md-3
    .col-md-6.pt-md-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name))do |f|
        = devise_error_messages!
        %label 新規登録フォーム
        .form-group
          = f.label :name, "名前"
          = f.text_field :name , class: "form-control", placeholder: "名前"
        .form-group
          = f.label :email,"Email アドレス"
          = f.text_field :email , class: "form-control", placeholder: "name@example.com"
        .form-group
          = f.label :password,"パスワード"
          = f.text_field :password, class: "form-control", placeholder: "パスワード"
        .form-group
          = f.label :password,"パスワード(確認)"
          = f.text_field :password, class: "form-control", placeholder: "パスワード(確認)"
        .form-group
          = f.label :sex, "性別"
          = f.select( :sex, [['男性', '男性'], ['女性', '女性'],['それ以外', 'それ以外'],['無回答', '無回答']],{},{class: "form-control"})
        .form-group
          = f.label :occupation, "職業"
          = f.select( :sex, [['社会人', '社会人'], ['大学生・大学院生', '大学生・大学院生'],['小中高生', '小中高生'],['その他', 'その他'],['無回答', '無回答']],{},{class: "form-control"})
        .form-group
          = f.label :old, "年齢"
          = f.select( :sex, [['60代以上', '60代以上'], ['50代', '50代'],['40代', '40代'],['30代', '30代'],['20代', '20代'], ['10代以下', '10代以下']],{},{class: "form-control"})
        .form-group
          = f.label :stuttering, "吃音の程度"
          = f.select( :sex, [['吃音の症状あり', '吃音の症状あり'], ['吃音の症状なし', '吃音の症状なし'],['無回答', '無回答']],{},{class: "form-control"})
        = f.submit "登録", class: "btn btn-primary"

