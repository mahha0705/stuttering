.container
  .row
    .col-md-3
    .col-md-6.pt-md-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name))do |f|
        = devise_error_messages!
        %label 新規登録フォーム
        .form-group
          = f.label :name, "名前"
          = f.text_field :name , class: "form-control", placeholder: "名前"
        .form-group
          = f.label :email,"Email アドレス"
          = f.email_field :email , class: "form-control", placeholder: "name@example.com"
        .form-group
          = f.label :password,"パスワード"
          = f.password_field :password, class: "form-control", placeholder: "パスワード"
        .form-group
          = f.label :password_confirmation,"パスワード(確認)"
          = f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード(確認)"
        .form-group
          = f.label :stuttering, "吃音の程度"
          = f.select( :stuttering, [['吃音の症状あり', '吃音の症状あり'], ['吃音の症状なし', '吃音の症状なし'],['無回答', '無回答']],{},{class: "form-control"})
        = f.submit "登録", type: "submit",class: "btn btn-primary"

