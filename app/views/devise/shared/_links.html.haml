- if controller_name != 'sessions'
  .p-2.small
    = link_to "ログイン >>", new_session_path(resource_name) , class: "mark"
- if devise_mapping.registerable? && controller_name != 'registrations'
  .p-2.small
    = link_to "新規登録 >>", new_registration_path(resource_name) , class: "mark"
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  .p-2.small
    = link_to "パスワードを忘れた方はこちら >>", new_password_path(resource_name) , class: "mark"
/ - if devise_mapping.confirmable? && controller_name != 'confirmations'
/   .p-2.small
/     = link_to "新規登録の認証メールを受け取っていない方 >>", new_confirmation_path(resource_name) , class: "mark"
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  .p-2.small
    = link_to "Didn't receive unlock instructions? >>", new_unlock_path(resource_name) , class: "mark"
- if devise_mapping.omniauthable?
  .p-2.small
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)} >>", omniauth_authorize_path(resource_name, provider) , class: "mark"
