.container
  .row
    .col-md-3
    .col-md-6.pt-md-4
      = form_for(current_user)do |f|
        %label 新規登録フォーム
        .form-group
          = f.label :name, "名前"
          = f.text_field :name , class: "form-control", placeholder: "名前"
        .form-group
          = f.label :stuttering, "吃音の程度"
          = f.select( :stuttering, [['吃音の症状あり', '吃音の症状あり'], ['吃音の症状なし', '吃音の症状なし'],['無回答', '無回答']],{},{class: "form-control"})
        .form-group
          = f.label :about, "自己紹介"
          = f.text_area :about, class: "form-control",placeholder: "自己紹介"

        = f.submit "登録", type: "submit",class: "btn btn-primary"

