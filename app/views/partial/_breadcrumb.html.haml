%nav{"aria-label": "breadcrumb"}
  %ol.breadcrumb
    -if current_page?(root_path)
      %li.p-1.breadcrumb-item.active{"aria-current": "page"} 新着
    -else
      %li.p-1.breadcrumb-item
        = link_to "新着", root_path
    - QuestionTag.tags_i18n.map do |key, value|
      - if params[:sort] == key
        %li.p-1.breadcrumb-item.active{"aria-current": "page"} #{value}
      - else
        %li.p-1.breadcrumb-item
          = link_to value, "/questions/category/#{key}"
