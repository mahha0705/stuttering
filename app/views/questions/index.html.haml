- if flash[:notice]
  - flash.each do |key, value|
    - if value = "本人確認用のメールを送信しました。メール内のリンクからアカウントを有効化させてください。"
      #hoge.alert.alert-success.mb-0.text-center.rounded-0
        = flash[:notice]
    - else
      #foo.alert.alert-success.mb-0.text-center.rounded-0
        = flash[:notice]
= render "partial/header"
.container-fluid
  .row
    .col-md-1.col-ms-12
    .col-md-10.col-ms-12.mt-4
      = render "partial/top_index"
    .col-md-1.col-ms-12
  .row
    .col-md-1.col-ms-12
    .col-md-10.col-ms-12
      .row
        .col-md-8.col-ms-12
          .mt-5
            = render "partial/breadcrumb"
            - if @search_result.present?
              .h5.mt-3.mb-2.text-center
                #{@search_result}
          = render partial: "partial/index_question_card" ,collection: @questions, as:"question"
          = paginate @questions
        .col-md-4.col-ms-12
          .mt-5
            = render "partial/search_form"
          .mt-3
            = render partial: "partial/question_each_list" ,locals:{newest_questions: @newest_questions_limit5,newest_school_questions: @newest_school_questions_limit5,newest_work_questions: @newest_work_questions_limit5,newest_jobHunting_questions: @newest_jobHunting_questions_limit5,newest_relationship_questions: @newest_relationship_questions_limit5,newest_other_questions: @newest_other_questions_limit5 }
= render "partial/footer"

